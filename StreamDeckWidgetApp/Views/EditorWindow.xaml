<ui:FluentWindow x:Class="StreamDeckWidgetApp.Views.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:converters="clr-namespace:StreamDeckWidgetApp.Core.Converters"
        mc:Ignorable="d"
        Title="Stream Deck Control Center" 
        Width="1100" Height="700"
        MinHeight="600" MinWidth="900"
        WindowBackdropType="Mica"
        ExtendsContentIntoTitleBar="True"
        WindowStartupLocation="CenterScreen"
        Loaded="EditorWindow_Loaded"
        PreviewMouseDown="Window_PreviewMouseDown">

    <ui:FluentWindow.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:ImagePathToImageSourceConverter x:Key="PathToImage"/>
        <converters:ActionTypeToHelpTextConverter x:Key="ActionToHelp"/>
        <converters:ActionTypeToCommandListConverter x:Key="ActionToCommands"/>
        <converters:ActionTypeToVisibilityConverter x:Key="ActionToVisibility"/>
        <converters:ActionTypeToSimpleInputVisibilityConverter x:Key="ActionToSimpleVis"/>

        <!-- RENK PALETÄ° -->
        <SolidColorBrush x:Key="BgDark" Color="#121212"/>
        <SolidColorBrush x:Key="BgPanel" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="BgInput" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="BorderColor" Color="#404040"/>
        <SolidColorBrush x:Key="AccentColor" Color="#4CC2FF"/> <!-- Windows Blue -->
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#AAAAAA"/>

        <!-- WPF UI TextBox uses native styling -->

        <!-- MODERN LABEL STÄ°LÄ° -->
        <Style TargetType="TextBlock" x:Key="Label">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>

        <!-- DARK THEME SCROLLBAR STÄ°LÄ° -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Border Background="#1A1A1A" CornerRadius="3"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb BorderThickness="0">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border x:Name="ThumbBorder" Background="#444" CornerRadius="3" Margin="1">
                                                    <Border.Triggers>
                                                        <EventTrigger RoutedEvent="MouseEnter">
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetName="ThumbBorder" 
                                                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                                                    To="#666" Duration="0:0:0.15"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger>
                                                        <EventTrigger RoutedEvent="MouseLeave">
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetName="ThumbBorder" 
                                                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                                                    To="#444" Duration="0:0:0.15"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger>
                                                    </Border.Triggers>
                                                </Border>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="8"/>
                    <Setter Property="Width" Value="Auto"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- WPF UI Slider uses native styling -->

        <!-- WPF UI Button uses native styling -->
        <Style TargetType="ui:Button" x:Key="PrimaryBtn">
            <Setter Property="Appearance" Value="Primary"/>
        </Style>

        <!-- WPF UI ComboBox uses native styling -->
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TITLE BAR -->
        <ui:TitleBar Grid.Row="0"
                     Title="Stream Deck Control Center"
                     Height="32"
                     ShowMaximize="True"
                     ShowMinimize="True"
                     ShowHelp="False"
                     MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
        </ui:TitleBar>

        <!-- ANA TASARIM -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/> <!-- SOL PANEL: AYARLAR -->
                <ColumnDefinition Width="*"/>   <!-- ORTA: Ã–NÄ°ZLEME -->
                <ColumnDefinition Width="300"/> <!-- SAÄž PANEL: TAB (KÃœTÃœPHANE + Ã–ZELLÄ°KLER) -->
            </Grid.ColumnDefinitions>

        <!-- FluentWindow otomatik olarak title bar saÄŸlar -->

        <!-- 1. SOL PANEL (AYARLAR) -->
        <Border Grid.Column="0" Background="{StaticResource BgPanel}" 
                Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="âš™ï¸ AYARLAR" Foreground="{StaticResource AccentColor}" 
                                   FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>
                        
                        <!-- Profil YÃ¶netimi -->
                        <Border Background="{StaticResource BgInput}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="ðŸ“‹ Profil" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>
                                
                                <!-- Profil SeÃ§ici -->
                                <ComboBox ItemsSource="{Binding Profiles}"
                                          SelectedItem="{Binding CurrentProfile, Mode=OneWay}"
                                          DisplayMemberPath="Name"
                                          Height="Auto" Padding="10"
                                          Margin="0,0,0,10">
                                    <ComboBox.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" 
                                                      Command="{Binding DataContext.SwitchProfileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      CommandParameter="{Binding SelectedItem.Id, RelativeSource={RelativeSource AncestorType=ComboBox}}"/>
                                    </ComboBox.InputBindings>
                                </ComboBox>
                                
                                <!-- Profil ButonlarÄ± -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Yeni Profil -->
                                    <ui:Button Grid.Column="0" Command="{Binding CreateProfileCommand}"
                                            ToolTip="Yeni Profil OluÅŸtur"
                                            Appearance="Secondary"
                                            Icon="{ui:SymbolIcon Add24}"
                                            Margin="0,0,3,0" Height="32"/>
                                    
                                    <!-- Kopyala -->
                                    <ui:Button Grid.Column="1" Command="{Binding DuplicateProfileCommand}"
                                            ToolTip="Profili Kopyala"
                                            Appearance="Secondary"
                                            Icon="{ui:SymbolIcon Copy24}"
                                            Margin="3,0,3,0" Height="32"/>
                                    
                                    <!-- Sil -->
                                    <ui:Button Grid.Column="2" Command="{Binding DeleteProfileCommand}"
                                            ToolTip="Profili Sil"
                                            Appearance="Danger"
                                            Icon="{ui:SymbolIcon Delete24}"
                                            Margin="3,0,0,0" Height="32"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Grid YapÄ±landÄ±rmasÄ± -->
                        <Border Background="{StaticResource BgInput}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Grid DÃ¼zeni" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>
                                
                                <StackPanel>
                                    <TextBlock Text="SATIR" FontSize="10" Foreground="#888" Margin="0,0,0,8"/>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="35"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0" Minimum="1" Maximum="8" Value="{Binding Rows, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                                        <Border Grid.Column="1" Background="#1A1A1A" CornerRadius="4" Padding="8,4" Margin="8,0,0,0">
                                            <TextBlock Text="{Binding Rows}" Foreground="{StaticResource AccentColor}" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>

                                    <TextBlock Text="SÃœTUN" FontSize="10" Foreground="#888" Margin="0,0,0,8"/>
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="35"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0" Minimum="1" Maximum="10" Value="{Binding Columns, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                                        <Border Grid.Column="1" Background="#1A1A1A" CornerRadius="4" Padding="8,4" Margin="8,0,0,0">
                                            <TextBlock Text="{Binding Columns}" Foreground="{StaticResource AccentColor}" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </StackPanel>

                                <!-- Bilgi Notu -->
                                <Border Background="Transparent" Padding="4" Margin="0,8,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="â€¢" FontSize="8" Foreground="#444" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Maks: 8 satÄ±r Ã— 10 sÃ¼tun" FontSize="10" Foreground="#555"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Buton Boyutu -->
                        <TextBlock Text="Buton Boyutu" Style="{StaticResource Label}" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding ButtonSizeOptions}" 
                                  SelectedValue="{Binding SelectedButtonSize}" 
                                  SelectedValuePath="Value" 
                                  DisplayMemberPath="Key"
                                  Height="40" Padding="10"/>

                        <Separator Background="#333" Margin="0,5"/>

                        <!-- Manuel Kaydet Butonu -->
                        <ui:Button Command="{Binding SaveAndCloseCommand}" Style="{StaticResource PrimaryBtn}" Content="{Binding SaveButtonText}" >
                            
                        </ui:Button>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <!-- 2. ORTA PANEL (SANAL GRÄ°D Ã–NÄ°ZLEME) -->
            <Grid Grid.Column="1" Margin="15,10,15,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- BaÅŸlÄ±k -->
                    <RowDefinition Height="*"/>    <!-- Ã–nizleme -->
                </Grid.RowDefinitions>

                <!-- BAÅžLIK -->
                <TextBlock Grid.Row="0" Text="ðŸŽ¨ WIDGET Ã–NÄ°ZLEME" 
                           Foreground="{StaticResource AccentColor}" 
                           FontWeight="Bold" FontSize="14" 
                           Margin="5,0,0,10"/>

                <!-- SANAL GRÄ°D CONTAINER -->
                <Border Grid.Row="1" Background="#0A0A0A" CornerRadius="10" 
                        BorderBrush="#333" BorderThickness="1" Padding="8">
                    <Viewbox Stretch="Uniform" StretchDirection="Both">
                        <ItemsControl ItemsSource="{Binding DeckItems}" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="{Binding Columns}"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.ItemClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Margin="5" BorderThickness="0"
                                            Width="{Binding DataContext.SelectedButtonSize, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            Height="{Binding DataContext.SelectedButtonSize, RelativeSource={RelativeSource AncestorType=Window}}"
                                            AllowDrop="True"
                                            Drop="PreviewGrid_Drop"
                                            DragOver="PreviewGrid_DragOver">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="MainBorder"
                                                                    Background="{Binding Color}" 
                                                                    CornerRadius="8" 
                                                                    Padding="5"
                                                                    BorderThickness="2">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                                                        <!-- BoÅŸ slot iÃ§in kesik Ã§izgili border -->
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Title}" Value="BoÅŸ">
                                                                                <Setter Property="BorderBrush">
                                                                                    <Setter.Value>
                                                                                        <DrawingBrush Viewport="0,0,6,6" ViewportUnits="Absolute" TileMode="Tile">
                                                                                            <DrawingBrush.Drawing>
                                                                                                <DrawingGroup>
                                                                                                    <GeometryDrawing Brush="#404040">
                                                                                                        <GeometryDrawing.Geometry>
                                                                                                            <RectangleGeometry Rect="0,0,3,3"/>
                                                                                                        </GeometryDrawing.Geometry>
                                                                                                    </GeometryDrawing>
                                                                                                </DrawingGroup>
                                                                                            </DrawingBrush.Drawing>
                                                                                        </DrawingBrush>
                                                                                    </Setter.Value>
                                                                                </Setter>
                                                                                <Setter Property="BorderThickness" Value="2"/>
                                                                                <Setter Property="Background" Value="#151515"/>
                                                                            </DataTrigger>
                                                                            <!-- SeÃ§ili buton -->
                                                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                                                                <Setter Property="BorderThickness" Value="3"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <Grid>
                                                                    <!-- Dosya Ä°konu (IconPath varsa) -->
                                                                    <Image Source="{Binding IconPath, Converter={StaticResource PathToImage}}" 
                                                                           Stretch="UniformToFill" Opacity="0.8"/>
                                                                    
                                                                    <!-- Segoe MDL2 / Emoji Ä°konu (Icon varsa, IconPath yoksa) -->
                                                                    <TextBlock Text="{Binding Icon}" FontFamily="Segoe MDL2 Assets"
                                                                               FontSize="36" Foreground="White" 
                                                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                               Opacity="0.9">
                                                                        <TextBlock.Effect>
                                                                            <DropShadowEffect ShadowDepth="2" BlurRadius="6" Opacity="0.6" Color="#000"/>
                                                                        </TextBlock.Effect>
                                                                        <TextBlock.Style>
                                                                            <Style TargetType="TextBlock">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                                <Style.Triggers>
                                                                                    <!-- IconPath varsa gizle -->
                                                                                    <DataTrigger Binding="{Binding IconPath, Converter={StaticResource PathToImage}}" Value="{x:Null}">
                                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                                    </DataTrigger>
                                                                                    <!-- Icon boÅŸsa gizle -->
                                                                                    <DataTrigger Binding="{Binding Icon}" Value="">
                                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                                    </DataTrigger>
                                                                                    <DataTrigger Binding="{Binding Icon}" Value="{x:Null}">
                                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                                    </DataTrigger>
                                                                                    <DataTrigger Binding="{Binding Title}" Value="BoÅŸ">
                                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </TextBlock.Style>
                                                                    </TextBlock>
                                                                    
                                                                    <!-- BoÅŸ slot iÃ§in + ikonu -->
                                                                    <TextBlock Text="+" FontSize="32" Foreground="#4CC2FF" 
                                                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                               FontWeight="Light" Opacity="0.6">
                                                                        <TextBlock.Effect>
                                                                            <DropShadowEffect ShadowDepth="0" BlurRadius="12" Opacity="0.5" Color="#4CC2FF"/>
                                                                        </TextBlock.Effect>
                                                                        <TextBlock.Style>
                                                                            <Style TargetType="TextBlock">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding Title}" Value="BoÅŸ">
                                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </TextBlock.Style>
                                                                    </TextBlock>
                                                                    
                                                                   
                                                                </Grid>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="MainBorder" Property="Opacity" Value="0.8"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Viewbox>
                </Border>
            </Grid>

            <!-- 3. SAÄž PANEL (TAB: KÃœTÃœPHANE + Ã–ZELLÄ°KLER) -->
            <Border Grid.Column="2" Background="{StaticResource BgPanel}" 
                    Padding="15">
                <TabControl Background="Transparent" BorderThickness="0">
                    <TabControl.Resources>
                        <!-- Modern Tab Stili -->
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Grid Margin="0,0,8,0">
                                            <Border x:Name="Border" Background="Transparent" 
                                                    Padding="12,8" Cursor="Hand">
                                                <ContentPresenter x:Name="ContentSite" 
                                                                  ContentSource="Header" 
                                                                  HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <!-- Alt Ã§izgi (Aktif gÃ¶sterge) -->
                                            <Border x:Name="Indicator" Height="3" VerticalAlignment="Bottom" 
                                                    Background="Transparent" CornerRadius="1.5,1.5,0,0"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Indicator" Property="Background" Value="{StaticResource AccentColor}"/>
                                                <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter Property="Foreground" Value="#666"/>
                                            </Trigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                    <Condition Property="IsSelected" Value="False"/>
                                                </MultiTrigger.Conditions>
                                                <Setter Property="Foreground" Value="#AAA"/>
                                                <Setter TargetName="Indicator" Property="Background" Value="#333"/>
                                            </MultiTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>

                    <!-- TAB 1: KÃœTÃœPHANE -->
                    <TabItem Header="ðŸ“š KÃœTÃœPHANE">
                        <Grid Margin="0,15,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Arama Ã‡ubuÄŸu -->
                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                <ui:TextBox x:Name="SearchBox"
                                         Text="{Binding LibrarySearchText, UpdateSourceTrigger=PropertyChanged}"
                                         PlaceholderText="Åžablon ara..."
                                         Padding="32,10,10,10"
                                         VerticalAlignment="Center"/>
                                <!-- Arama Ä°konu -->
                                <TextBlock Text="ðŸ”" FontSize="14" Foreground="#555" 
                                           VerticalAlignment="Center" Margin="10,0,0,0"
                                           IsHitTestVisible="False"/>
                              
                            </Grid>

                            <!-- Kategori Filtresi -->
                            <ComboBox Grid.Row="1"
                                      ItemsSource="{Binding LibraryCategories}"
                                      SelectedItem="{Binding SelectedCategory}"
                                      Height="Auto" 
                                      Padding="10"
                                      Margin="0,0,0,10"/>

                            <!-- Preset Listesi -->
                            <ListBox Grid.Row="2"
                                     Padding="0,0,12,0"
                                     ItemsSource="{Binding LibraryItems}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     PreviewMouseLeftButtonDown="PresetList_PreviewMouseLeftButtonDown"
                                     MouseMove="PresetList_MouseMove">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0,0,0,5"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="6">
                                                        <ContentPresenter/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2A2A2A"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource BgInput}" 
                                                CornerRadius="6" 
                                                Padding="10"
                                                Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Ä°kon -->
                                                <Border Grid.Column="0" 
                                                        Background="{Binding Color}" 
                                                        CornerRadius="6" 
                                                        Width="35" 
                                                        Height="35"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Icon}" 
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="18" 
                                                               Foreground="White"
                                                               HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Bilgiler -->
                                                <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}" 
                                                               Foreground="White" 
                                                               FontWeight="SemiBold"
                                                               FontSize="12"/>
                                                    <TextBlock Text="{Binding Description}" 
                                                               Foreground="#888" 
                                                               FontSize="10"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </TabItem>

                    <!-- TAB 2: Ã–ZELLÄ°KLER -->
                    <TabItem Header="ðŸŽ¨ Ã–ZELLÄ°KLER">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,15,0,0" Padding="0,0,12,0">
                            <Grid>
                                <!-- BOÅž DURUM -->
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                            Visibility="{Binding SelectedDeckItem, Converter={StaticResource BoolToVis}, ConverterParameter=Inverse}">
                                    <Border Background="{StaticResource BgInput}" CornerRadius="50" Width="80" Height="80" Margin="0,0,0,15">
                                        <TextBlock Text="ðŸ‘ˆ" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Ã–nizlemeden" Foreground="#666" FontSize="14" FontWeight="SemiBold" TextAlignment="Center"/>
                                    <TextBlock Text="bir buton seÃ§in" Foreground="#666" FontSize="14" FontWeight="SemiBold" TextAlignment="Center"/>
                                </StackPanel>

                                <!-- DOLU DURUM -->
                                <StackPanel DataContext="{Binding SelectedDeckItem}"
                                            Visibility="{Binding DataContext.SelectedDeckItem, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}">

                                    <TextBlock Text="BUTON DÃœZENLEME" Foreground="{StaticResource AccentColor}" FontWeight="Bold" FontSize="14" Margin="0,0,0,20"/>

                                    <!-- Ä°kon Ã–nizleme ve SeÃ§ici -->
                                    <TextBlock Text="Ä°kon" Style="{StaticResource Label}" Margin="0,0,0,5"/>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Mevcut Ä°kon Ã–nizleme -->
                                        <Border Grid.Column="0" Width="60" Height="60" Background="{Binding Color}" CornerRadius="10" 
                                                BorderBrush="#555" BorderThickness="1" Margin="0,0,10,0"
                                                AllowDrop="True" Drop="IconPreview_Drop" ToolTip="Resim dosyasÄ± sÃ¼rÃ¼kleyin">
                                            <Grid>
                                                <!-- IconPath varsa Image gÃ¶ster -->
                                                <Image Source="{Binding IconPath, Converter={StaticResource PathToImage}}" 
                                                       Stretch="Uniform" Margin="8"
                                                       Visibility="{Binding IconPath, Converter={StaticResource BoolToVis}}"/>
                                                
                                                <!-- Icon (Segoe MDL2) varsa gÃ¶ster -->
