<Window x:Class="StreamDeckWidgetApp.Views.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:StreamDeckWidgetApp.Core.Converters"
        xmlns:behaviors="clr-namespace:StreamDeckWidgetApp.Core.Behaviors"
        mc:Ignorable="d"
        Title="Stream Deck Control Center" MinHeight="600" MinWidth="900"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        behaviors:WindowDragBehavior.EnableDrag="True">

    <!-- Pencere KenarlÄ±ÄŸÄ± ve GÃ¶lge Efekti Ä°Ã§in -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" CornerRadius="10" GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:ImagePathToImageSourceConverter x:Key="PathToImage"/>

        <!-- RENK PALETÄ° -->
        <SolidColorBrush x:Key="BgDark" Color="#121212"/>
        <SolidColorBrush x:Key="BgPanel" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="BgInput" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="BorderColor" Color="#404040"/>
        <SolidColorBrush x:Key="AccentColor" Color="#4CC2FF"/> <!-- Windows Blue -->
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#AAAAAA"/>

        <!-- MODERN TEXTBOX STÄ°LÄ° -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BgInput}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- MODERN LABEL STÄ°LÄ° -->
        <Style TargetType="TextBlock" x:Key="Label">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>

        <!-- MODERN BUTTON STÄ°LÄ° -->
        <Style TargetType="Button" x:Key="PrimaryBtn">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="#121212"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- MODERN COMBOBOX STÄ°LÄ° (DARK DROPDOWN) -->
        <Style x:Key="ComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="{StaticResource BgInput}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3A3A3A"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2A2A2A"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Full ComboBox template to ensure Popup uses dark background -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource BgInput}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Grid.Column="2" Focusable="false" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Background="Transparent" BorderThickness="0" HorizontalAlignment="Stretch">
                                <Path x:Name="Arrow" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0" Data="M 0 0 L 4 4 L 8 0 Z" Fill="{StaticResource TextPrimary}"/>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" VerticalAlignment="Center" Margin="4,0,30,0"/>
                            <Popup x:Name="PART_Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Border Background="{StaticResource BgPanel}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="6">
                                    <ScrollViewer Margin="4" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle" Value="{DynamicResource ComboBoxItemStyle}"/>
        </Style>
    </Window.Resources>

    <!-- ANA TASARIM -->
    <Border Background="{StaticResource BgDark}" CornerRadius="10" BorderBrush="#333" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/> <!-- SOL PANEL: AYARLAR -->
                <ColumnDefinition Width="Auto"/>   <!-- ORTA: Ã–NÄ°ZLEME + DETAY -->
                <ColumnDefinition Width="320"/> <!-- SAÄž PANEL: KÃœTÃœPHANE -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- BAÅžLIK -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 1. HEADER (SÃœRÃœKLENEBÄ°LÄ°R ALAN) -->
            <Grid Grid.ColumnSpan="3" Height="40" Background="Transparent">
                <TextBlock Text="Stream Deck Kontrol Merkezi" Foreground="#888" 
                           VerticalAlignment="Center" Margin="20,0,0,0" FontSize="12" IsHitTestVisible="False"/>
                
                <!-- KayÄ±t Durumu GÃ¶stergesi -->
                <TextBlock Text="{Binding SaveStatus}" Foreground="{StaticResource AccentColor}" 
                           VerticalAlignment="Center" HorizontalAlignment="Center" 
                           FontSize="11" FontWeight="SemiBold" IsHitTestVisible="False"/>
                
                <!-- Kapatma Butonu -->
                <Button Command="{Binding CloseCommand}" Content="X"  HorizontalAlignment="Right"
                            Width="40" Height="40"
                            Background="Transparent" Foreground="#888" BorderThickness="0" Cursor="Hand"/>
            </Grid>

            <!-- 2. SOL PANEL (AYARLAR) -->
            <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource BgPanel}" 
                    CornerRadius="0,0,0,10" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="âš™ï¸ AYARLAR" Foreground="{StaticResource AccentColor}" 
                                   FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>
                        
                        <!-- Grid YapÄ±landÄ±rmasÄ± -->
                        <Border Background="{StaticResource BgInput}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Grid DÃ¼zeni" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>
                                
                                <StackPanel>
                                    <TextBlock Text="SATIR" FontSize="10" Foreground="#888" Margin="0,0,0,5"/>
                                    <Slider Minimum="1" Maximum="8" Value="{Binding Rows, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TickFrequency="1" IsSnapToTickEnabled="True"/>
                                    <TextBlock Text="{Binding Rows}" Foreground="#AAA" HorizontalAlignment="Center" Margin="0,6,0,8"/>

                                    <TextBlock Text="SÃœTUN" FontSize="10" Foreground="#888" Margin="0,0,0,5"/>
                                    <Slider Minimum="1" Maximum="10" Value="{Binding Columns, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TickFrequency="1" IsSnapToTickEnabled="True"/>
                                    <TextBlock Text="{Binding Columns}" Foreground="#AAA" HorizontalAlignment="Center" Margin="0,6,0,0"/>

                                    <TextBlock Text="Not: Maksimum 8 satÄ±r ve 10 sÃ¼tun kullanÄ±labilir." FontSize="11" Foreground="#777" Margin="0,10,0,0" TextWrapping="Wrap"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Buton Boyutu -->
                        <TextBlock Text="Buton Boyutu" Style="{StaticResource Label}" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding ButtonSizeOptions}" 
                                  SelectedValue="{Binding SelectedButtonSize}" 
                                  SelectedValuePath="Value" 
                                  DisplayMemberPath="Key"
                                  Height="40" Background="{StaticResource BgInput}" Foreground="White" Padding="10"/>

                        <Separator Background="#333" Margin="0,20"/>

                        <!-- Manuel Kaydet Butonu -->
                        <Button Command="{Binding SaveCommand}" Content="ðŸ’¾ ÅžÄ°MDÄ° KAYDET" Style="{StaticResource PrimaryBtn}"/>
                        
                        <TextBlock Text="DeÄŸiÅŸiklikler otomatik olarak kaydedilir." 
                                   Foreground="#555" FontSize="11" TextWrapping="Wrap" Margin="0,10,0,0" TextAlignment="Center"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- 3. ORTA PANEL (SANAL GRÄ°D Ã–NÄ°ZLEME + DETAY EDÄ°TÃ–R) -->
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Ã–nizleme BaÅŸlÄ±k -->
                    <RowDefinition Height="*"/>    <!-- Sanal Grid -->
                    <RowDefinition Height="Auto"/> <!-- AyÄ±rÄ±cÄ± -->
                    <RowDefinition Height="300"/>  <!-- Detay EditÃ¶r -->
                </Grid.RowDefinitions>

                <!-- ÃœST: SANAL GRÄ°D Ã–NÄ°ZLEME -->
                <TextBlock Grid.Row="0" Text="ðŸŽ¨ WIDGET Ã–NÄ°ZLEME" 
                           Foreground="{StaticResource AccentColor}" 
                           FontWeight="Bold" FontSize="14" 
                           Margin="30,20,30,10"/>

                <!-- Sanal Grid Container - GerÃ§ek boyutlu butonlar -->
                <Border Grid.Row="1" Background="#0A0A0A" Margin="20,0" CornerRadius="10" 
                        BorderBrush="#333" BorderThickness="1" Padding="20">
                    <ItemsControl ItemsSource="{Binding DeckItems}" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="{Binding Columns}"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.ItemClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Margin="5" BorderThickness="0"
                                        Width="{Binding DataContext.SelectedButtonSize, RelativeSource={RelativeSource AncestorType=Window}}" 
                                        Height="{Binding DataContext.SelectedButtonSize, RelativeSource={RelativeSource AncestorType=Window}}"
                                        AllowDrop="True"
                                        Drop="PreviewGrid_Drop"
                                        DragOver="PreviewGrid_DragOver">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="MainBorder"
                                                                Background="{Binding Color}" 
                                                                CornerRadius="8" 
                                                                Padding="5"
                                                                BorderThickness="2">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                                    <!-- BoÅŸ slot iÃ§in kesik Ã§izgili border -->
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Title}" Value="BoÅŸ">
                                                                            <Setter Property="BorderBrush" Value="#444"/>
                                                                            <Setter Property="BorderThickness" Value="2"/>
                                                                            <Setter Property="Background" Value="Transparent"/>
                                                                        </DataTrigger>
                                                                        <!-- SeÃ§ili buton -->
                                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                            <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                                                            <Setter Property="BorderThickness" Value="3"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <Grid>
                                                                <Image Source="{Binding IconPath, Converter={StaticResource PathToImage}}" 
                                                                       Stretch="UniformToFill" Opacity="0.8"/>
                                                                
                                                                <TextBlock Text="{Binding Title}" 
                                                                           Foreground="White" 
                                                                           FontWeight="Bold" FontSize="10"
                                                                           HorizontalAlignment="Center" 
                                                                           VerticalAlignment="Center"
                                                                           TextWrapping="Wrap" 
                                                                           TextAlignment="Center"/>
                                                            </Grid>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="MainBorder" Property="Opacity" Value="0.8"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                </Border>

                <!-- AYIRICI -->
                <Separator Grid.Row="2" Background="#333" Margin="30,10"/>

                <!-- ALT: DETAY EDÄ°TÃ–R (SCROLLABLE) -->
                <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" Margin="30,0,30,20">
                    <Grid>
                        <!-- BOÅž DURUM -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Visibility="{Binding SelectedDeckItem, Converter={StaticResource BoolToVis}, ConverterParameter=Inverse}">
                            <Border Background="{StaticResource BgPanel}" CornerRadius="50" Width="80" Height="80" Margin="0,0,0,15">
                                <TextBlock Text="ðŸ‘†" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="YukarÄ±daki Ã¶nizlemeden bir buton seÃ§in" 
                                       Foreground="#666" FontSize="14" FontWeight="SemiBold" TextAlignment="Center"/>
                        </StackPanel>

                        <!-- DOLU DURUM -->
                        <StackPanel DataContext="{Binding SelectedDeckItem}"
                                    Visibility="{Binding DataContext.SelectedDeckItem, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}">
                        
                        <TextBlock Text="BUTON DÃœZENLEME" Foreground="{StaticResource AccentColor}" FontWeight="Bold" FontSize="14" Margin="0,0,0,20"/>

                        <!-- Ãœst KÄ±sÄ±m: Ä°kon ve Renk -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Ä°kon Ã–nizleme -->
                            <Border Grid.Column="0" Width="100" Height="100" Background="{StaticResource BgInput}" CornerRadius="15" Margin="0,0,20,0">
                                <Grid>
                                    <Image Source="{Binding IconPath, Converter={StaticResource PathToImage}}" Margin="15"/>
                                    <Border Background="#AA000000" VerticalAlignment="Bottom" Height="25" CornerRadius="0,0,15,15">
                                        <TextBlock Text="SÃ¼rÃ¼kle BÄ±rak" Foreground="White" FontSize="9" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Renk ve BaÅŸlÄ±k -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="BaÅŸlÄ±k" Style="{StaticResource Label}" Margin="0"/>
                                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="Renk (Hex)" Style="{StaticResource Label}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="{Binding Color}" CornerRadius="4" Margin="0,0,10,0" BorderBrush="#555" BorderThickness="1"/>
                                    <TextBox Grid.Column="1" Text="{Binding Color, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>
                            </StackPanel>
                        </Grid>

                        <Separator Background="#333" Margin="0,20"/>

                        <!-- Aksiyon AyarlarÄ± -->
                        <TextBlock Text="Aksiyon Tipi" Style="{StaticResource Label}"/>
                        <ComboBox ItemsSource="{Binding DataContext.ActionTypes, RelativeSource={RelativeSource AncestorType=Window}}"
                                  SelectedItem="{Binding ActionType}"
                                  Height="40" Background="{StaticResource BgInput}" Foreground="White" Padding="10"/>
                        
                        <!-- Buton DavranÄ±ÅŸÄ± -->
                        <TextBlock Text="Buton DavranÄ±ÅŸÄ±" Style="{StaticResource Label}"/>
                        <ComboBox SelectedItem="{Binding BehaviorType, UpdateSourceTrigger=PropertyChanged}"
                                  Height="40" Background="{StaticResource BgInput}" Foreground="White" Padding="10">
                            <System:String xmlns:System="clr-namespace:System;assembly=mscorlib">Push</System:String>
                            <System:String xmlns:System="clr-namespace:System;assembly=mscorlib">Toggle</System:String>
                        </ComboBox>
                        
                        <Border Background="#2A2A2A" CornerRadius="5" Padding="10" Margin="0,5,0,15">
                            <StackPanel>
                                <TextBlock Foreground="#888" FontSize="11" Margin="0,0,0,3">
                                    <Run Text="â€¢ Push:" FontWeight="Bold"/> Tek seferlik aksiyon (Program aÃ§, makro Ã§alÄ±ÅŸtÄ±r)
                                </TextBlock>
                                <TextBlock Foreground="#888" FontSize="11">
                                    <Run Text="â€¢ Toggle:" FontWeight="Bold"/> AÃ§/Kapa mantÄ±ÄŸÄ± (Sesi kapat, yayÄ±nÄ± baÅŸlat/durdur)
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Komut / Dosya Yolu / Hotkey" Style="{StaticResource Label}"/>
                        <TextBox Text="{Binding Command, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="80" TextWrapping="Wrap" VerticalContentAlignment="Top" AcceptsReturn="True"/>

                        <Border Background="#2A2A2A" CornerRadius="5" Padding="10" Margin="0,10,0,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="ðŸ’¡ Ä°pucu: " Foreground="{StaticResource AccentColor}" FontWeight="Bold"/>
                                    <TextBlock Text="Aksiyon tipine gÃ¶re komut Ã¶rnekleri:" Foreground="#AAA"/>
                                </StackPanel>
                                <TextBlock Foreground="#888" FontSize="11" Margin="15,0,0,2">
                                    <Run Text="â€¢ Execute:" FontWeight="Bold"/> C:\Program Files\app.exe veya https://google.com
                                </TextBlock>
                                <TextBlock Foreground="#888" FontSize="11" Margin="15,0,0,2">
                                    <Run Text="â€¢ Hotkey:" FontWeight="Bold"/> COPY, PASTE, SCREENSHOT, ALT+TAB
                                </TextBlock>
                                <TextBlock Foreground="#888" FontSize="11" Margin="15,0,0,0">
                                    <Run Text="â€¢ Drag &amp; Drop:" FontWeight="Bold"/> .exe, .lnk veya resim dosyasÄ± sÃ¼rÃ¼kleyin
                                </TextBlock>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>

            <!-- 4. SAÄž PANEL (KÃœTÃœPHANE) -->
            <Border Grid.Row="1" Grid.Column="2" Background="{StaticResource BgPanel}" 
                    CornerRadius="0,0,10,0" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="ðŸ“š KÃœTÃœPHANE" Foreground="{StaticResource AccentColor}" 
                               FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>

                    <!-- Arama Ã‡ubuÄŸu -->
                    <TextBox Grid.Row="1" 
                             Text="{Binding LibrarySearchText, UpdateSourceTrigger=PropertyChanged}"
                             Background="{StaticResource BgInput}"
                             Foreground="White"
                             Padding="10"
                             Margin="0,0,0,10"
                             VerticalAlignment="Center">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="ðŸ” Ara..." Foreground="#666" FontSize="14" Margin="5,0,0,0"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Kategori Filtresi -->
                    <ComboBox Grid.Row="2"
                              ItemsSource="{Binding LibraryCategories}"
                              SelectedItem="{Binding SelectedCategory}"
                              Height="35" 
                              Background="{StaticResource BgInput}" 
                              Foreground="White" 
                              Padding="10"
                              Margin="0,0,0,10"/>

                    <!-- Preset Listesi -->
                    <ListBox Grid.Row="3"
                             ItemsSource="{Binding LibraryItems}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             PreviewMouseLeftButtonDown="PresetList_PreviewMouseLeftButtonDown"
                             MouseMove="PresetList_MouseMove">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0,0,0,5"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="6">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2A2A2A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource BgInput}" 
                                        CornerRadius="6" 
                                        Padding="10"
                                        Cursor="Hand">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Ä°kon -->
                                        <Border Grid.Column="0" 
                                                Background="{Binding Color}" 
                                                CornerRadius="6" 
                                                Width="35" 
                                                Height="35"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Icon}" 
                                                       FontFamily="Segoe MDL2 Assets"
                                                       FontSize="18" 
                                                       Foreground="White"
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Bilgiler -->
                                        <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" 
                                                       Foreground="White" 
                                                       FontWeight="SemiBold"
                                                       FontSize="12"/>
                                            <TextBlock Text="{Binding Description}" 
                                                       Foreground="#888" 
                                                       FontSize="10"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
