<Window x:Class="StreamDeckWidgetApp.Views.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:StreamDeckWidgetApp.Core.Converters"
        mc:Ignorable="d"
        Title="Stream Deck Control Center" Height="600" Width="900"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">

    <!-- Pencere KenarlÄ±ÄŸÄ± ve GÃ¶lge Efekti Ä°Ã§in -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" ResizeBorderThickness="5" CornerRadius="10" GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:ImagePathToImageSourceConverter x:Key="PathToImage"/>

        <!-- RENK PALETÄ° -->
        <SolidColorBrush x:Key="BgDark" Color="#121212"/>
        <SolidColorBrush x:Key="BgPanel" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="BgInput" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="BorderColor" Color="#404040"/>
        <SolidColorBrush x:Key="AccentColor" Color="#4CC2FF"/> <!-- Windows Blue -->
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#AAAAAA"/>

        <!-- MODERN TEXTBOX STÄ°LÄ° -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BgInput}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- MODERN LABEL STÄ°LÄ° -->
        <Style TargetType="TextBlock" x:Key="Label">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>

        <!-- MODERN BUTTON STÄ°LÄ° -->
        <Style TargetType="Button" x:Key="PrimaryBtn">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="#121212"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- ANA TASARIM -->
    <Border Background="{StaticResource BgDark}" CornerRadius="10" BorderBrush="#333" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/> <!-- SOL MENÃœ -->
                <ColumnDefinition Width="*"/>   <!-- SAÄž Ä°Ã‡ERÄ°K -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- BAÅžLIK -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 1. HEADER (SÃœRÃœKLENEBÄ°LÄ°R ALAN) -->
            <Grid Grid.ColumnSpan="2" Height="40" Background="Transparent">
                <TextBlock Text="Stream Deck Kontrol Merkezi" Foreground="#888" 
                           VerticalAlignment="Center" Margin="20,0,0,0" FontSize="12" IsHitTestVisible="False"/>
                
                <!-- Kapatma Butonu -->
                <Button Content="âœ•" HorizontalAlignment="Right" Width="40" Height="40"
                        Background="Transparent" Foreground="#AAA" BorderThickness="0"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C42B1C"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- 2. SOL PANEL (GENEL AYARLAR) -->
            <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource BgPanel}" 
                    CornerRadius="0,0,0,10" Padding="20">
                <StackPanel>
                    <TextBlock Text="âš™ï¸ GENEL AYARLAR" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,20"/>

                    <!-- Grid YapÄ±landÄ±rmasÄ± -->
                    <Border Background="{StaticResource BgInput}" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Grid DÃ¼zeni" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="SATIR" FontSize="10" Foreground="#888" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding Rows, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="SÃœTUN" FontSize="10" Foreground="#888" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding Columns, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Buton Boyutu -->
                    <TextBlock Text="Buton Boyutu" Style="{StaticResource Label}"/>
                    <ComboBox ItemsSource="{Binding ButtonSizeOptions}" 
                              SelectedValue="{Binding SelectedButtonSize}" 
                              SelectedValuePath="Value" 
                              DisplayMemberPath="Key"
                              Height="40" Background="{StaticResource BgInput}" Foreground="White" Padding="10"/>

                    <Separator Background="#333" Margin="0,20"/>

                    <!-- Kaydet Butonu -->
                    <Button Command="{Binding SaveCommand}" Content="ðŸ’¾ TÃœMÃœNÃœ KAYDET" Style="{StaticResource PrimaryBtn}"/>
                    
                    <TextBlock Text="DeÄŸiÅŸiklikler anlÄ±k olarak widget'a yansÄ±r." 
                               Foreground="#555" FontSize="11" TextWrapping="Wrap" Margin="0,10,0,0" TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- 3. SAÄž PANEL (BUTON DETAYLARI) -->
            <Grid Grid.Row="1" Grid.Column="1" Margin="30">
                
                <!-- BOÅž DURUM -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                            Visibility="{Binding SelectedDeckItem, Converter={StaticResource BoolToVis}, ConverterParameter=Inverse}">
                    <Border Background="{StaticResource BgPanel}" CornerRadius="50" Width="100" Height="100" Margin="0,0,0,20">
                        <TextBlock Text="ðŸ‘†" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="DÃ¼zenlemek iÃ§in Widget Ã¼zerinden bir butona tÄ±klayÄ±n." 
                               Foreground="#666" FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>

                <!-- DOLU DURUM -->
                <ScrollViewer Visibility="{Binding SelectedDeckItem, Converter={StaticResource BoolToVis}}" VerticalScrollBarVisibility="Auto">
                    <StackPanel DataContext="{Binding SelectedDeckItem}">
                        
                        <TextBlock Text="BUTON DÃœZENLEME" Foreground="{StaticResource AccentColor}" FontWeight="Bold" FontSize="14" Margin="0,0,0,20"/>

                        <!-- Ãœst KÄ±sÄ±m: Ä°kon ve Renk -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Ä°kon Ã–nizleme -->
                            <Border Grid.Column="0" Width="100" Height="100" Background="{StaticResource BgInput}" CornerRadius="15" Margin="0,0,20,0">
                                <Grid>
                                    <Image Source="{Binding IconPath, Converter={StaticResource PathToImage}}" Margin="15"/>
                                    <Border Background="#AA000000" VerticalAlignment="Bottom" Height="25" CornerRadius="0,0,15,15">
                                        <TextBlock Text="SÃ¼rÃ¼kle BÄ±rak" Foreground="White" FontSize="9" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Renk ve BaÅŸlÄ±k -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="BaÅŸlÄ±k" Style="{StaticResource Label}" Margin="0"/>
                                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="Renk (Hex)" Style="{StaticResource Label}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="{Binding Color}" CornerRadius="4" Margin="0,0,10,0" BorderBrush="#555" BorderThickness="1"/>
                                    <TextBox Grid.Column="1" Text="{Binding Color, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>
                            </StackPanel>
                        </Grid>

                        <Separator Background="#333" Margin="0,20"/>

                        <!-- Aksiyon AyarlarÄ± -->
                        <TextBlock Text="Aksiyon Tipi" Style="{StaticResource Label}"/>
                        <ComboBox ItemsSource="{Binding DataContext.ActionTypes, RelativeSource={RelativeSource AncestorType=Window}}"
                                  SelectedItem="{Binding ActionType}"
                                  Height="40" Background="{StaticResource BgInput}" Foreground="White" Padding="10"/>

                        <TextBlock Text="Komut / Dosya Yolu / Hotkey" Style="{StaticResource Label}"/>
                        <TextBox Text="{Binding Command, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="80" TextWrapping="Wrap" VerticalContentAlignment="Top" AcceptsReturn="True"/>

                        <Border Background="#2A2A2A" CornerRadius="5" Padding="10" Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ’¡ Ä°pucu: " Foreground="{StaticResource AccentColor}"/>
                                <TextBlock Text="Hotkey iÃ§in 'COPY', 'PASTE', 'SCREENSHOT' gibi komutlar kullanÄ±n." Foreground="#888"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</Window>
