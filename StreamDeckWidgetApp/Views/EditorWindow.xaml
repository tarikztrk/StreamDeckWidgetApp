<Window x:Class="StreamDeckWidgetApp.Views.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:StreamDeckWidgetApp.Core.Converters"
        xmlns:behaviors="clr-namespace:StreamDeckWidgetApp.Core.Behaviors"
        mc:Ignorable="d"
        Title="Stream Deck Control Center" 
        Width="1100" Height="700"
        MinHeight="600" MinWidth="900"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        behaviors:WindowDragBehavior.EnableDrag="True">

    <!-- Pencere KenarlÄ±ÄŸÄ± ve GÃ¶lge Efekti Ä°Ã§in -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" CornerRadius="10" GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:ImagePathToImageSourceConverter x:Key="PathToImage"/>

        <!-- RENK PALETÄ° -->
        <SolidColorBrush x:Key="BgDark" Color="#121212"/>
        <SolidColorBrush x:Key="BgPanel" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="BgInput" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="BorderColor" Color="#404040"/>
        <SolidColorBrush x:Key="AccentColor" Color="#4CC2FF"/> <!-- Windows Blue -->
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#AAAAAA"/>

        <!-- MODERN TEXTBOX STÄ°LÄ° -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BgInput}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- MODERN LABEL STÄ°LÄ° -->
        <Style TargetType="TextBlock" x:Key="Label">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>

        <!-- DARK THEME SCROLLBAR STÄ°LÄ° -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Border Background="#1A1A1A" CornerRadius="3"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb BorderThickness="0">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border x:Name="ThumbBorder" Background="#444" CornerRadius="3" Margin="1">
                                                    <Border.Triggers>
                                                        <EventTrigger RoutedEvent="MouseEnter">
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetName="ThumbBorder" 
                                                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                                                    To="#666" Duration="0:0:0.15"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger>
                                                        <EventTrigger RoutedEvent="MouseLeave">
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetName="ThumbBorder" 
                                                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                                                    To="#444" Duration="0:0:0.15"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger>
                                                    </Border.Triggers>
                                                </Border>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="6"/>
                    <Setter Property="Width" Value="Auto"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- MODERN SLIDER STÄ°LÄ° -->
        <Style TargetType="Slider">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Height="4" Background="#333" CornerRadius="2" VerticalAlignment="Center"/>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Width="16" Height="16" Background="{StaticResource AccentColor}" BorderThickness="0">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Fill="{StaticResource AccentColor}" Width="16" Height="16">
                                                    <Ellipse.Effect>
                                                        <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.3" Color="#000"/>
                                                    </Ellipse.Effect>
                                                </Ellipse>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- MODERN BUTTON STÄ°LÄ° -->
        <Style TargetType="Button" x:Key="PrimaryBtn">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="#121212"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- MODERN COMBOBOX STÄ°LÄ° (DARK DROPDOWN) -->
        <Style x:Key="ComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3D3D3D"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2A4A5A"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Full ComboBox template to ensure Popup uses dark background -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource BgInput}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Grid.Column="2" Focusable="false" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Background="Transparent" BorderThickness="0" HorizontalAlignment="Stretch">
                                <Path x:Name="Arrow" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0" Data="M 0 0 L 4 4 L 8 0 Z" Fill="{StaticResource TextPrimary}"/>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" VerticalAlignment="Center" Margin="4,0,30,0"/>
                            <Popup x:Name="PART_Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Fade">
                                <Border Background="{StaticResource BgPanel}" BorderBrush="#444" BorderThickness="1" CornerRadius="8" Margin="0,4,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.4" Color="#000"/>
                                    </Border.Effect>
                                    <ScrollViewer Margin="4,6" SnapsToDevicePixels="True" MaxHeight="200">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle" Value="{DynamicResource ComboBoxItemStyle}"/>
        </Style>
    </Window.Resources>

    <!-- ANA TASARIM -->
    <Border Background="{StaticResource BgDark}" CornerRadius="10" BorderBrush="#333" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/> <!-- SOL PANEL: AYARLAR -->
                <ColumnDefinition Width="*"/>   <!-- ORTA: Ã–NÄ°ZLEME -->
                <ColumnDefinition Width="300"/> <!-- SAÄž PANEL: TAB (KÃœTÃœPHANE + Ã–ZELLÄ°KLER) -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- BAÅžLIK -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 1. HEADER (SÃœRÃœKLENEBÄ°LÄ°R ALAN) -->
            <Grid Grid.ColumnSpan="3" Height="40" Background="Transparent">
                <TextBlock Text="Stream Deck Kontrol Merkezi" Foreground="#666" 
                           VerticalAlignment="Center" Margin="20,0,0,0" FontSize="12" IsHitTestVisible="False"/>
                
                <!-- KayÄ±t Durumu GÃ¶stergesi - Daha subtle bir tasarÄ±m -->
                <Border HorizontalAlignment="Center" VerticalAlignment="Center" 
                        Background="#1A1A1A" CornerRadius="10" Padding="12,4">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="6" Height="6" Fill="#4CAF50" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SaveStatus}" Foreground="#888" 
                                   FontSize="10" VerticalAlignment="Center" IsHitTestVisible="False"/>
                    </StackPanel>
                </Border>
                
                <!-- Kapatma Butonu -->
                <Button Command="{Binding CloseCommand}" HorizontalAlignment="Right"
                        Width="40" Height="40"
                        Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <TextBlock Text="âœ•" Foreground="#666" FontSize="14" FontWeight="Light"/>
                </Button>
            </Grid>

            <!-- 2. SOL PANEL (AYARLAR) -->
            <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource BgPanel}" 
                    CornerRadius="0,0,0,10" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="âš™ï¸ AYARLAR" Foreground="{StaticResource AccentColor}" 
                                   FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>
                        
                        <!-- Grid YapÄ±landÄ±rmasÄ± -->
                        <Border Background="{StaticResource BgInput}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Grid DÃ¼zeni" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>
                                
                                <StackPanel>
                                    <TextBlock Text="SATIR" FontSize="10" Foreground="#888" Margin="0,0,0,8"/>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="35"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0" Minimum="1" Maximum="8" Value="{Binding Rows, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                                        <Border Grid.Column="1" Background="#1A1A1A" CornerRadius="4" Padding="8,4" Margin="8,0,0,0">
                                            <TextBlock Text="{Binding Rows}" Foreground="{StaticResource AccentColor}" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>

                                    <TextBlock Text="SÃœTUN" FontSize="10" Foreground="#888" Margin="0,0,0,8"/>
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="35"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0" Minimum="1" Maximum="10" Value="{Binding Columns, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                                        <Border Grid.Column="1" Background="#1A1A1A" CornerRadius="4" Padding="8,4" Margin="8,0,0,0">
                                            <TextBlock Text="{Binding Columns}" Foreground="{StaticResource AccentColor}" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </StackPanel>

                                <!-- Bilgi Notu -->
                                <Border Background="Transparent" Padding="4" Margin="0,8,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="â€¢" FontSize="8" Foreground="#444" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Maks: 8 satÄ±r Ã— 10 sÃ¼tun" FontSize="10" Foreground="#555"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Buton Boyutu -->
                        <TextBlock Text="Buton Boyutu" Style="{StaticResource Label}" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding ButtonSizeOptions}" 
                                  SelectedValue="{Binding SelectedButtonSize}" 
                                  SelectedValuePath="Value" 
                                  DisplayMemberPath="Key"
                                  Height="40" Background="{StaticResource BgInput}" Foreground="White" Padding="10"/>

                        <Separator Background="#333" Margin="0,20"/>

                        <!-- Manuel Kaydet Butonu -->
                        <Button Command="{Binding SaveAndCloseCommand}" Style="{StaticResource PrimaryBtn}">
                            <TextBlock Text="{Binding SaveButtonText}" FontWeight="SemiBold" FontSize="13">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#121212"/>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- 3. ORTA PANEL (SANAL GRÄ°D Ã–NÄ°ZLEME) -->
            <Grid Grid.Row="1" Grid.Column="1" Margin="15,10,15,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- BaÅŸlÄ±k -->
                    <RowDefinition Height="*"/>    <!-- Ã–nizleme -->
                </Grid.RowDefinitions>

                <!-- BAÅžLIK -->
                <TextBlock Grid.Row="0" Text="ðŸŽ¨ WIDGET Ã–NÄ°ZLEME" 
                           Foreground="{StaticResource AccentColor}" 
                           FontWeight="Bold" FontSize="14" 
                           Margin="5,0,0,10"/>

                <!-- SANAL GRÄ°D CONTAINER -->
                <Border Grid.Row="1" Background="#0A0A0A" CornerRadius="10" 
                        BorderBrush="#333" BorderThickness="1" Padding="8">
                    <Viewbox Stretch="Uniform" StretchDirection="Both">
                        <ItemsControl ItemsSource="{Binding DeckItems}" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="{Binding Columns}"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.ItemClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Margin="5" BorderThickness="0"
                                            Width="{Binding DataContext.SelectedButtonSize, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            Height="{Binding DataContext.SelectedButtonSize, RelativeSource={RelativeSource AncestorType=Window}}"
                                            AllowDrop="True"
                                            Drop="PreviewGrid_Drop"
                                            DragOver="PreviewGrid_DragOver">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="MainBorder"
                                                                    Background="{Binding Color}" 
                                                                    CornerRadius="8" 
                                                                    Padding="5"
                                                                    BorderThickness="2">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                                                        <!-- BoÅŸ slot iÃ§in kesik Ã§izgili border -->
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Title}" Value="BoÅŸ">
                                                                                <Setter Property="BorderBrush">
                                                                                    <Setter.Value>
                                                                                        <DrawingBrush Viewport="0,0,6,6" ViewportUnits="Absolute" TileMode="Tile">
                                                                                            <DrawingBrush.Drawing>
                                                                                                <DrawingGroup>
                                                                                                    <GeometryDrawing Brush="#4CC2FF">
                                                                                                        <GeometryDrawing.Geometry>
                                                                                                            <RectangleGeometry Rect="0,0,3,3"/>
                                                                                                        </GeometryDrawing.Geometry>
                                                                                                    </GeometryDrawing>
                                                                                                </DrawingGroup>
                                                                                            </DrawingBrush.Drawing>
                                                                                        </DrawingBrush>
                                                                                    </Setter.Value>
                                                                                </Setter>
                                                                                <Setter Property="BorderThickness" Value="2"/>
                                                                                <Setter Property="Background" Value="#151515"/>
                                                                            </DataTrigger>
                                                                            <!-- SeÃ§ili buton -->
                                                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                                                                <Setter Property="BorderThickness" Value="3"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <Grid>
                                                                    <!-- Dosya Ä°konu (IconPath varsa) -->
                                                                    <Image Source="{Binding IconPath, Converter={StaticResource PathToImage}}" 
                                                                           Stretch="UniformToFill" Opacity="0.8"/>
                                                                    
                                                                    <!-- Segoe MDL2 / Emoji Ä°konu (Icon varsa, IconPath yoksa) -->
                                                                    <TextBlock Text="{Binding Icon}" FontFamily="Segoe MDL2 Assets"
                                                                               FontSize="36" Foreground="White" 
                                                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                               Opacity="0.9">
                                                                        <TextBlock.Effect>
                                                                            <DropShadowEffect ShadowDepth="2" BlurRadius="6" Opacity="0.6" Color="#000"/>
                                                                        </TextBlock.Effect>
                                                                        <TextBlock.Style>
                                                                            <Style TargetType="TextBlock">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                                <Style.Triggers>
                                                                                    <!-- IconPath varsa gizle -->
                                                                                    <DataTrigger Binding="{Binding IconPath, Converter={StaticResource PathToImage}}" Value="{x:Null}">
                                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                                    </DataTrigger>
                                                                                    <!-- Icon boÅŸsa gizle -->
                                                                                    <DataTrigger Binding="{Binding Icon}" Value="">
                                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                                    </DataTrigger>
                                                                                    <DataTrigger Binding="{Binding Icon}" Value="{x:Null}">
                                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                                    </DataTrigger>
                                                                                    <DataTrigger Binding="{Binding Title}" Value="BoÅŸ">
                                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </TextBlock.Style>
                                                                    </TextBlock>
                                                                    
                                                                    <!-- BoÅŸ slot iÃ§in + ikonu -->
                                                                    <TextBlock Text="+" FontSize="32" Foreground="#4CC2FF" 
                                                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                               FontWeight="Light" Opacity="0.6">
                                                                        <TextBlock.Effect>
                                                                            <DropShadowEffect ShadowDepth="0" BlurRadius="12" Opacity="0.5" Color="#4CC2FF"/>
                                                                        </TextBlock.Effect>
                                                                        <TextBlock.Style>
                                                                            <Style TargetType="TextBlock">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding Title}" Value="BoÅŸ">
                                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </TextBlock.Style>
                                                                    </TextBlock>
                                                                    
                                                                    <!-- Metin iÃ§in gradient overlay (ikon bÃ¼tÃ¼nlÃ¼ÄŸÃ¼ korunur) -->
                                                                    <Border VerticalAlignment="Bottom" HorizontalAlignment="Stretch" 
                                                                            CornerRadius="0,0,6,6" Padding="4,8,4,4" Height="32">
                                                                        <Border.Background>
                                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                                <GradientStop Color="Transparent" Offset="0"/>
                                                                                <GradientStop Color="#AA000000" Offset="0.4"/>
                                                                                <GradientStop Color="#DD000000" Offset="1"/>
                                                                            </LinearGradientBrush>
                                                                        </Border.Background>
                                                                        <Border.Style>
                                                                            <Style TargetType="Border">
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding Title}" Value="BoÅŸ">
                                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Border.Style>
                                                                        <TextBlock Text="{Binding Title}" 
                                                                                   Foreground="White" 
                                                                                   FontWeight="Bold" FontSize="11"
                                                                                   HorizontalAlignment="Center" 
                                                                                   VerticalAlignment="Bottom"
                                                                                   TextWrapping="NoWrap" 
                                                                                   TextTrimming="CharacterEllipsis"
                                                                                   TextAlignment="Center">
                                                                            <TextBlock.Effect>
                                                                                <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.9" Color="#000"/>
                                                                            </TextBlock.Effect>
                                                                        </TextBlock>
                                                                    </Border>
                                                                </Grid>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="MainBorder" Property="Opacity" Value="0.8"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Viewbox>
                </Border>
            </Grid>

            <!-- 4. SAÄž PANEL (TAB: KÃœTÃœPHANE + Ã–ZELLÄ°KLER) -->
            <Border Grid.Row="1" Grid.Column="2" Background="{StaticResource BgPanel}" 
                    CornerRadius="0,0,10,0" Padding="15">
                <TabControl Background="Transparent" BorderThickness="0">
                    <TabControl.Resources>
                        <!-- Modern Tab Stili -->
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Grid Margin="0,0,8,0">
                                            <Border x:Name="Border" Background="Transparent" 
                                                    Padding="12,8" Cursor="Hand">
                                                <ContentPresenter x:Name="ContentSite" 
                                                                  ContentSource="Header" 
                                                                  HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <!-- Alt Ã§izgi (Aktif gÃ¶sterge) -->
                                            <Border x:Name="Indicator" Height="3" VerticalAlignment="Bottom" 
                                                    Background="Transparent" CornerRadius="1.5,1.5,0,0"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Indicator" Property="Background" Value="{StaticResource AccentColor}"/>
                                                <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter Property="Foreground" Value="#666"/>
                                            </Trigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsMouseOver" Value="True"/>
